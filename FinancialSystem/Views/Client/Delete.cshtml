@model Model.Entity.Client
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Confirm Delete?</h3>

<div class="panel panel-default">
    <div class="panel-heading">Are you sure you want to delete?</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Code</dt>
            <dd>@Model.idClient</dd>

            <dt>Name</dt>
            <dd>@Model.name</dd>


            <dt>PPS</dt>
            <dd>@Model.pps</dd>

            <dt>Address</dt>
            <dd>@Model.address</dd>

            <dt>Phone</dt>
            <dd>@Model.phone</dd>
        </dl>
    </div>
    @Html.ActionLink("Cancel", "Index", new { }, new { @class = "form-actions btn btn-primary" })
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
        @Html.ActionLink("Delete", "ConfirmDelete", new { id = @Model.idClient }, new { @class = "form-actions btn btn-primary" })

    </div>

