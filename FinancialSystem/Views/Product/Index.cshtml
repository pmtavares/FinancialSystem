
@model List<Model.Entity.Product>
@{
    ViewBag.Title = "List of Product";
}
@if (ViewBag.DeleteMessage != null)
{
    <div class="alert alert-info">
        @ViewBag.DeleteMessage
    </div>
}

<h2 class="text-center text-success">Products List</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Product/Create">New</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Code</th>
            <th>Description</th>
            <th>Value</th>
            <th>Category</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.idProduct</td>
                <td>@obj.name</td>
                <td>@obj.unitPrice</td>
                <td>@obj.category</td>
                <td><a class="btn btn-success" href="~/Product/Details/@obj.idProduct"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Product/Edit/@obj.idProduct"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Product/Delete/@obj.idProduct"><span class="fa fa-remove"></span></a></td>

            </tr>
        }
    </tbody>

</table>
