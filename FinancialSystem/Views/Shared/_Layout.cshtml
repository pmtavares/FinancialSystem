                                <li>
                                    <a href="~/Sale/InvoiceSale"><i class="fa fa-archive fa-fw" style="color:#f0ad4e"></i>Invoice</a>
                                </li>
                                <li>
                                    <a href="~/Sale/NewSale"><i class="fa fa-shopping-cart fa-fw" style="color:#f0ad4e"></i>New sale</a>
                                </li>
                                <li>
                                    <a href="~/SaleDetail/Index"><i class="fa fa-info-circle fa-fw" style="color:#f0ad4e"></i>Sales details</a>
                                </li>
                                <li>
                                    <a href="~/Sale/SaleReport"><i class="fa fa-book fa-fw" style="color:#f0ad4e"></i>Reports</a>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <a href="~/Client/Index"><i class="fa fa-user fa-fw"></i> Clients</a>
                        </li>
                        <li>
                            <a href="~/Saler/Index"><i class="fa fa-user fa-fw"></i> Saler</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> Pay e Invoices<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/MethodPayment/Index"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Payment choice</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Payments</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-dollar fa-fw" style="color:#f0ad4e"></i>Invoices</a>
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> Administration<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#">Company</a>
